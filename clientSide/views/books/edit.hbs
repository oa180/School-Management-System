{{>header}}
{{>navbar}}
<section class="my-5 container">
    <form method="post">
         <div class="mb-3">
            <input class="form-control" name="id" placeholder="id" value="{{result.id}}" disabled>
        </div>
        <div class="mb-3">
            <input class="form-control" name="name" placeholder="name" value="{{result.name}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="writername" placeholder="writername" value="{{result.writername}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="division" placeholder="division" value="{{result.division}}">
        </div>
        <div class="mb-3">
            <input class="form-control" name="pages" placeholder="pages" value="{{result.pages}}">
        </div>
        <div class="form-check">
          <input class="form-check-input" name="status" type="checkbox" id="flexCheckChecked" {{#if result.status}}checked{{/if}}>
            <label class="form-check-label" for="flexCheckChecked">
                Status
            </label>
</div>
        <div class="mb-3">
            <button class="btn btn-primary">Edit</button>
        </div>
    </form>
</section>
{{>footer}}